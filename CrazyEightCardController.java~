/* Crazy Eight Label Controller
 * Created by Saad Butt
 * Last Updated 2025/01/12
 * To create a label controller for the Crazy Eight game
*/

import javax.swing.*;
import java.awt.event.*;

public class CrazyEightCardController extends Object implements MouseListener
{
  private CrazyEightGame model; //The current model of the Game
  
  
   /*Default Constructor
   * JLabel component is connected to the Model
   * Param: The current Game model
   */
  public CrazyEightCardController(CrazyEightGame model)
  {
    super();
    this.model = model;
  }
  
  
  /* Any label with an image clicked is passed through a method
   * Param: The event sent from a click of a JLabel
   */
  public void mouseClicked(MouseEvent e)
  {
   this.model.cardClicked(((JLabel)e.getSource()).getText()); //Find the card clicked
   
  }
  
  public void mousePressed(MouseEvent e)
  {
  }
  
  public void mouseReleased(MouseEvent e)
  {
  }
  
  public void mouseEntered(MouseEvent e)
  {
  }
  
  public void mouseExited(MouseEvent e)
  {
  }
  
  
}