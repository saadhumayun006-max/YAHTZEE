 * To run the Crazy Eight Game
*/

import javax.swing.*;

public class CrazyEightProgram
{
  public static void main (String [] args)
  {
    //Initialization
    CrazyEightGame game = new CrazyEightGame();     //The game
    CrazyEightView view = new CrazyEightView(game); //The game view
    JFrame myFrame = new JFrame("Crazy Eight");     
    
    myFrame.setContentPane(view);
    myFrame.setSize(1100,700);
    myFrame.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
    myFrame.setVisible(true);

  }
}