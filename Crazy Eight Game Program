 * To run the Crazy Eight Game
 */

import javax.swing.*;

public class CrazyEightProgram
{
  public static void main (String [] args)
  {
    //Initialization
    CrazyEightGame game = new CrazyEightGame();     //The game
    CrazyEightView view = new CrazyEightView(game); //The game view
    JFrame myFrame = new JFrame("Crazy Eight");     //The frame of the game
    
    myFrame.setContentPane(view);                           //Set frames view                
    myFrame.setSize(1100,700);                              //Set size of frame
    myFrame.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE); //Exit when the window is closed
    myFrame.setVisible(true);                               //Set visibilty
    
  }
}
