import javax.imageio.*;
import javax.swing.*;

public class Card
{
  //Attributes
  private int rank;    //Rank of the card
  private char suit;   //Suit of the card
  
  //Default Constructor
  public Card()
  {
    super();
  }
  
  //Checks to see if there is card
  public boolean isThereACard()
  {
    if (this.rank == 0 && this.suit == 'A')
    {
      return false;
    }
    else
    {
      return true;
    }
  }
  
  //To check if the card is a Crazy Eight
  public Boolean isCrazyEight()  
  {
    if(this.rank == 7)
    {
      return (true); 
    }
    return (false);
  }
  
  //Return the Suit of the Card
  public char getSuit()
  {
    return suit;
  }
  
  //Return the Rank of the Card
  public int getRank()
  {
    return rank;
  }
  
  //Use the Card 
  public void useCard()
  {
    this.rank = 0;
    this.suit = 'A';
  }
  
  /*To set a cards Suit and Rank
   Param: rank of the card, suit of the card*/
  public void setCard(int rank, char suit)
  {
    this.rank = rank;
    this.suit = suit;
  }
  
  //Get ImageIcon of the card with the same Suit and Rank
  public ImageIcon getImage() 
  {
    ImageIcon cardImage = new ImageIcon("");
    switch (this.rank){
      case 1:
        if(suit == 'S')
      {
        cardImage = new ImageIcon("CardImages/ace_of_spades2.png");
      }
        else if(suit == 'H')
        {
          cardImage = new ImageIcon("CardImages/ace_of_hearts.png");
        }
        else if(suit == 'C')
        {
          cardImage = new ImageIcon("CardImages/ace_of_clubs.png");
        }
        else{
          cardImage = new ImageIcon("CardImages/ace_of_diamonds.png");
        }
        break;
      case 2:
        if(suit == 'S')
      {
        cardImage = new ImageIcon("CardImages/2_of_spades.png");
      }
        else if(suit == 'H')
        {
          cardImage = new ImageIcon("CardImages/2_of_hearts.png");
        }
        else if(suit == 'C')
        {
          cardImage = new ImageIcon("CardImages/2_of_clubs.png");
        }
        else{
          cardImage = new ImageIcon("CardImages/2_of_diamonds.png");
        }
        break;
      case 3:
        if(suit == 'S')
      {
        cardImage = new ImageIcon("CardImages/3_of_spades.png");
      }
        else if(suit == 'H')
        {
          cardImage = new ImageIcon("CardImages/3_of_hearts.png");
        }
        else if(suit == 'C')
        {
          cardImage = new ImageIcon("CardImages/3_of_clubs.png");
        }
        else{
          cardImage = new ImageIcon("CardImages/3_of_diamonds.png");
        }
        break;
      case 4:
        if(suit == 'S')
      {
        cardImage = new ImageIcon("CardImages/4_of_spades.png");
      }
        else if(suit == 'H')
        {
          cardImage = new ImageIcon("CardImages/4_of_hearts.png");
        }
        else if(suit == 'C')
        {
          cardImage = new ImageIcon("CardImages/4_of_clubs.png");
        }
        else{
          cardImage = new ImageIcon("CardImages/4_of_diamonds.png");
        }
        break;
      case 5:
        if(suit == 'S')
      {
        cardImage = new ImageIcon("CardImages/5_of_spades.png");
      }
        else if(suit == 'H')
        {
          cardImage = new ImageIcon("CardImages/5_of_hearts.png");
        }
        else if(suit == 'C')
        {
          cardImage = new ImageIcon("CardImages/5_of_clubs.png");
        }
        else{
          cardImage = new ImageIcon("CardImages/5_of_diamonds.png");
        }
        break;
      case 6:
        if(suit == 'S')
      {
        cardImage = new ImageIcon("CardImages/6_of_spades.png");
      }
        else if(suit == 'H')
        {
          cardImage = new ImageIcon("CardImages/6_of_hearts.png");
        }
        else if(suit == 'C')
        {
          cardImage = new ImageIcon("CardImages/6_of_clubs.png");
        }
        else{
          cardImage = new ImageIcon("CardImages/6_of_diamonds.png");
        }
        break;
      case 7:
        if(suit == 'S')
      {
        cardImage = new ImageIcon("CardImages/7_of_spades.png");
      }
        else if(suit == 'H')
        {
          cardImage = new ImageIcon("CardImages/7_of_hearts.png");
        }
        else if(suit == 'C')
        {
          cardImage = new ImageIcon("CardImages/7_of_clubs.png");
        }
        else{
          cardImage = new ImageIcon("CardImages/7_of_diamonds.png");
        }
        break;
      case 8:
        if(suit == 'S')
      {
        cardImage = new ImageIcon("CardImages/8_of_spades.png");
      }
        else if(suit == 'H')
        {
          cardImage = new ImageIcon("CardImages/8_of_hearts.png");
        }
        else if(suit == 'C')
        {
          cardImage = new ImageIcon("CardImages/8_of_clubs.png");
        }
        else{
          cardImage = new ImageIcon("CardImages/8_of_diamonds.png");
        }
        break;
      case 9:
        if(suit == 'S')
      {
        cardImage = new ImageIcon("CardImages/9_of_spades.png");
      }
        else if(suit == 'H')
        {
          cardImage = new ImageIcon("CardImages/9_of_hearts.png");
        }
        else if(suit == 'C')
        {
          cardImage = new ImageIcon("CardImages/9_of_clubs.png");
        }
        else{
          cardImage = new ImageIcon("CardImages/9_of_diamonds.png");
        }
        break;
      case 10:
        if(suit == 'S')
      {
        cardImage = new ImageIcon("CardImages/10_of_spades.png");
      }
        else if(suit == 'H')
        {
          cardImage = new ImageIcon("CardImages/10_of_hearts.png");
        }
        else if(suit == 'C')
        {
          cardImage = new ImageIcon("CardImages/10_of_clubs.png");
        }
        else{
          cardImage = new ImageIcon("CardImages/10_of_diamonds.png");
        }
        break;
      case 11:
        if(suit == 'S')
      {
        cardImage = new ImageIcon("CardImages/jack_of_spades2.png");
      }
        else if(suit == 'H')
        {
          cardImage = new ImageIcon("CardImages/jack_of_hearts2.png");
        }
        else if(suit == 'C')
        {
          cardImage = new ImageIcon("CardImages/jack_of_clubs2.png");
        }
        else{
          cardImage = new ImageIcon("CardImages/jack_of_diamonds2.png");
        }
        break;
      case 12:
        if(suit == 'S')
      {
        cardImage = new ImageIcon("CardImages/queen_of_spades2.png");
      }
        else if(suit == 'H')
        {
          cardImage = new ImageIcon("CardImages/queen_of_hearts2.png");
        }
        else if(suit == 'C')
        {
          cardImage = new ImageIcon("CardImages/queen_of_clubs2.png");
        }
        else{
          cardImage = new ImageIcon("CardImages/queen_of_diamonds2.png");
        }
        break;
      case 13:
        if(suit == 'S')
      {
        cardImage = new ImageIcon("CardImages/king_of_spades2.png");
      }
        else if(suit == 'H')
        {
          cardImage = new ImageIcon("CardImages/king_of_hearts2.png");
        }
        else if(suit == 'C')
        {
          cardImage = new ImageIcon("CardImages/king_of_clubs2.png");
        }
        else{
          cardImage = new ImageIcon("CardImages/king_of_diamonds2.png");
        }
        break;
    }
    return (cardImage);
    
  }
}
